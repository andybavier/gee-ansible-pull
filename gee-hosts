# docker_bip is the IP address of the Docker bridge
# Each bridge is configured with docker_bip on 10/8 subnet
# The IP addresses for the containers are from docker_bip/22
# So all containers have L2 connectivity
[nodes]
pcvm1-2.instageni.cenic.net     docker_bip=10.0.0.1    label=ig-cenic
pcvm1-2.geni.uchicago.edu     docker_bip=10.0.4.1    label=ig-chicago
pcvm2-10.instageni.clemson.edu     docker_bip=10.0.8.1    label=ig-clemson
pcvm12-3.utahddc.geniracks.net     docker_bip=10.0.92.1    label=ig-utahddc
